{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "rootDirs": ["./src", "./scripts", "./test"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true, // for token abi.json
  },
  "exclude": ["dist", "node_modules"],
  "include": ["./test", "./src", "./scripts", "./tasks"],
  "files": ["./hardhat.config.ts"]
}
